{
  "manifest_version": 3,
  "name": "ClassSync - 一鍵填報週曆",
  "version": "1.0.0",
  "description": "自動填報 tschoolkit 週曆的 Chrome 擴充功能",

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://tschoolkit.web.app/*",
    "https://asia-east1-campus-lite.cloudfunctions.net/*",
    "https://cst.zeabur.app/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://tschoolkit.web.app/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["page-inject.js"],
      "matches": ["https://tschoolkit.web.app/*"]
    }
  ],

  "action": {
    "default_title": "ClassSync - 填報週曆",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}